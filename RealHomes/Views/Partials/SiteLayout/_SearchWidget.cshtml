@using Umbraco;
    <!--//header-->
    <div class="container">

        <!--price-->
        <div class="price">
            <!--First row-->
            <div class="price-grid">
               
              <div id="txt_container" class="col-sm-6 price-top ">
                   <!--  <div ng-controller="RHApi.SearchWidgetApiController">
