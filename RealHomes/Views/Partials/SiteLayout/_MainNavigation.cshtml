@using Umbraco.Core.Models
@using Umbraco.Web.Models
@using System.Collections.Generic

@inherits UmbracoViewPage

<script src="~/Scripts/responsiveslides.js"></script>
<script>
        jQuery.noConflict();
        jQuery(function (){
           $(function () {
               $("#slider").responsiveSlides({
                    auto: true,
                    speed: 500,
                    namespace: "callbacks",
                    pager: true,
                });
            })
        });

</script>

<!--/banner/-->
<div class="header-right">
    <!-- Slider banner-->
    <div class="banner">
        <div class="slider">
            <div class="callbacks_container">
                <ul class="rslides" id="slider">
                    <li>
                        <div class="banner1">
                            <div class="caption">
                                <h3><span>@Umbraco.Field("mainHeading", casing: RenderFieldCaseType.Upper)</span></h3>
                                <p>@Umbraco.Field("editor")</p>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="banner2">
                            <div class="caption">
                                <h3><span>@Umbraco.Field("mainHeading", casing: RenderFieldCaseType.Upper)</span></h3>
                                <p>@Umbraco.Field("subtitle")</p>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="banner3">
                            <div class="caption">
                                <h3><span>@Umbraco.Field("mainHeading", casing: RenderFieldCaseType.Upper)</span></h3>
                                <p>@Umbraco.Field("subtitle")</p>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    

    

</div>
<!--banner end-->
<!--header-bottom-->
 @{ IEnumerable<RelatedLink> menuLinks = Umbraco.AssignedContentItem.GetPropertyValue<IEnumerable<RelatedLink>>("menuLinks");


     if (menuLinks != null && (int)menuLinks.Count() > 0)
     {


<div class="banner-bottom-top">
    <div class="container">
        <div class="bottom-header">

            <div class="header-bottom">
                @*i used to get the corresponding Icon of each menu item by cocatenating it in the names of menuicon properties*@
                @{
                    int i = 1;
                    string sIcon = ""; ;
                    foreach (RelatedLink link in @menuLinks)
                    {
                        <div class="bottom-head">
                            <a href="@link.Link">
                                <div class="buy-media">
                                     @{sIcon = "m" + i.ToString() + "Icon";}
                                    <i class="@Umbraco.AssignedContentItem.GetPropertyValue(@sIcon)"> </i>
                                    <h6>@link.Caption</h6>
                                    @{i = i + 1;}
                                </div>
                            </a>
                        </div>
                        }
                    }
               
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
</div>

         }
     }
<!--//header-bottom-->
