@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

<!-- Content Pages Banner-->
<div class="banner-buying">
    <div class="container">
        <h3><span>Contact Us</span></h3>

        @{Html.RenderPartial("SiteLayout/_Contentbanner");
        }
        
    </div>
</div>
<!--Content Pages Banner-->

<!--Contact-->
<div class="contact-top">
    <div class="container">
       <!-- <h3>Contact Us</h3>-->
        <div class="contact-top">
            <div class="col-md-6 contact-top1">
                <h4> Info</h4>
                <p class="text-contact">@Umbraco.Field("companyIntro")</p>
                <div class="contact-address">
                    <div class="col-md-6 contact-address1">
                        <h5>Address</h5>
                        <p><b>@Umbraco.Field("adressLine1")</b></p>
                        <p>@Umbraco.Field("addressLine2")</p>
                        <p>@Umbraco.Field("addressLine3")</p>
                    </div>
                    <div class="col-md-6 contact-address1">
                        <h5>Email Address </h5>
                        <p>General :<a href="malito:@Umbraco.Field("generalEmail")"> @Umbraco.Field("generalEmail") </a></p>
                        <p>Office :<a href="malito:@Umbraco.Field("officeEmail")"> @Umbraco.Field("officeEmail")</a></p>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="contact-address">
                    <div class="col-md-6 contact-address1">
                        <h5>Phone </h5>
                        <p>Landline : @Umbraco.Field("contactLandline")</p>
                        <p>Mobile : @Umbraco.Field("contactMobile")</p>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="col-md-6 contact-right">

                <!-- Render the Contact from and Contact Prtial View -->
                @if (TempData["ContactSuccess"] != null && (bool)TempData["ContactSuccess"])
                {
                    <div class="contact-address1">
                    <h4> Thank you</h4>
                        <p class="text-contact">Your email was sent successfully. We will get back to you soon.</p>
                        <p class="text-contact">Continue to <a href="~/">Home</a>.</p>
                    </div>
                }
                else
                {
                    //Html.RenderPartial("_Contactus");
                    Html.RenderAction("RenderForm", "ContactSurface");
                }
               
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d3150859.767904157!2d-96.62081048651531!3d39.536794757966845!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sin!4v1408111832978"> </iframe>
    </div>
</div>
